<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constrainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE605"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="355dp"
        android:layout_height="65dp"
        android:layout_marginTop="60dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/birthdaygreet"
        android:textAllCaps="true"
        android:textColor="#171616"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edTextNameOfPerson"
        android:layout_width="369dp"
        android:layout_height="57dp"
        android:layout_marginTop="53dp"
        android:autofillHints=""
        android:background="#FFE605"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="@string/enter_the_name"
        android:inputType="textPersonName"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <Button
        android:id="@+id/btnCreateBirthdayCard"
        android:layout_width="370dp"
        android:layout_height="56dp"
        android:layout_marginTop="404dp"
        android:background="#111111"
        android:fontFamily="serif"
        android:text="@string/create_birthday_card"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTextNameOfPerson" />


</androidx.constraintlayout.widget.ConstraintLayout>